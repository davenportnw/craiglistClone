@page
@model AddFavoriteModel

@{
    ViewData["Title"] = "AddFavorite";
}
<h1>Add to Favorites</h1>

<h3>Are you sure you want to add to favorites?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" asp-for="Favorite.FavoriteName">
            @Html.DisplayNameFor(model => model.Post.Title)
            
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.PostID" />
        <input type="submit" value="Add" class="btn btn-danger" /> |
        <a asp-page="Favorites">Back to Favorites</a>
    </form>